c0 = int(input("Enter a number: "))

counter = 0 

while c0 > 1:
    if c0 == 1:
        print('if')
        break
    elif c0%2 == 0:
        c0 = c0//2
        counter += 1
        print(c0)
        continue
    elif c0%2 != 0:
        c0 = 3 * c0 +1
        counter += 1
        print(c0)
        continue
    print(c0)

print('steps =', counter)
